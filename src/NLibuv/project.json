{
  "version": "0.2.0-*",
  "title": "NLibuv",
  "description": "A cross-platform bindings to the libuv library for .NET.",
  "authors": [ "Vitaly Zilnik" ],

  "buildOptions": {
    "languageVersion": "csharp6",
    "warningsAsErrors": true,
    "allowUnsafe": true,
    "xmlDoc": true,
    "nowarn": [ "CS1591" ]
  },

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE" ],
        "optimize": true
      }
    }
  },

  "packOptions": {
    "projectUrl": "http://github.com/neris/NLibuv",
    "licenseUrl": "https://raw.githubusercontent.com/neris/NLibuv/master/LICENSE",
    "requireLicenseAcceptance": false,
    "tags": [ "libuv", "uv", "io", "async" ],
    "repository": {
      "type": "git",
      "url": "git://github.com/neris/NLibuv"
    },

    "files": {
      "mappings": {
        "LICENSE": "../../LICENSE"
      }
    }
  },

  "dependencies": {
  },

  "frameworks": {
    "netstandard1.3": {
      "buildOptions": {
        "define": [ "DOTNET_CORE" ]
      },
      "dependencies": {
        "Microsoft.CSharp": "4.0.1",
        "System.Collections": "4.0.11",
        "System.Runtime": "4.1.0",
        "System.Runtime.Handles": "4.0.1",
        "System.Runtime.Extensions": "4.1.0",
        "System.Runtime.InteropServices": "4.1.0",
        "System.Reflection.TypeExtensions": "4.1.0",
        "System.Threading.Thread": "4.0.0",
        "System.Net.Primitives": "4.0.11"
      }
    }
  }
}
